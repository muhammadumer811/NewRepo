@model IEnumerable<ManagementSystem.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Emp_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Emp_Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Emp_Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Emp_Mobile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Emp_Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Emp_Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department.Department_Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Emp_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Emp_Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Emp_Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Emp_Mobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Emp_Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Emp_Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.Department_Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Emp_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Emp_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Emp_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
